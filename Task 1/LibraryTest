package library;

import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import static org.junit.jupiter.api.Assertions.*;

public class LibraryTest {

    private MyLibrary lib;
    private MyBook testBook;

    @BeforeEach
    void setUp() {
        lib = new MyLibrary();
        testBook = new MyBook("Treasure Island", "Robert Louis", "0987");
        lib.addNewBook(testBook);
    }
    @Test
    void testSuccessfulIssue() {
        boolean result = lib.issue("0987");
        assertTrue(result, "Should successfully issue an available book.");
    }

       @Test
    void testSuccessfulTakeBack() {
        lib.issue("0987"); 
        boolean result = lib.takeBack("0987");
        assertTrue(result, "Should successfully take back an issued book.");
    }
    @Test
    void testIsBookFreeStatus() {
        assertTrue(lib.isBookFree("0987"), "New book should be free.");
        lib.issue("0987");
        assertFalse(lib.isBookFree("0987"), "Issued book should not be free.");
    }
}
