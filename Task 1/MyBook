package library;

public  class MyBook implements CanIssue {
    private String Name;
    private String writer;
    private String code;
    private boolean alreadyIssued;

    public MyBook(String b, String w, String c)
    {
        Name = b;
        writer = w;
        code = c;
        alreadyIssued = false;
    }
    public boolean giveBook() {
        if(alreadyIssued==false){
            alreadyIssued = true;
            return true;
        }
        return false;
    }

    // returning the book
    public boolean takeBookBack() {
        if(alreadyIssued){
            alreadyIssued = false;
            return true;
        }
        return false;
    }

    public boolean checkAvailable() {
        return !alreadyIssued;
    }

    public String getCode(){
        return code;
    }

    public String getBookName(){
        return Name;
    }

    public String toString(){
        return Name+" by "+writer+" | Code: "+code+" | "+(checkAvailable()?"Free":"Taken");
    }
}



