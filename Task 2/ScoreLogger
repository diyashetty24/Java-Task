package student;
import java.io.BufferedWriter;
import java.io.FileWriter;
import java.io.IOException;

public class ScoreLogger {
 private final String filePath;
 public ScoreLogger(String filePath) {
     this.filePath = filePath;
 }
 public synchronized void writeScore(String studentName, int rollNo, int marks) {
     try (BufferedWriter writer = new BufferedWriter(new FileWriter(filePath, true))) {
         writer.write(studentName + "," + rollNo + "," + marks);
         writer.newLine();
         System.out.println(Thread.currentThread().getName() + " logged score  " + studentName);
     } catch (IOException e) {
         System.err.println("Error writing to : " + e.getMessage());
     }
   }
}
